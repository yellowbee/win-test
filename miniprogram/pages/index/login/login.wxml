<view class="container">
    <view style="margin-top: 40rpx;">
        <label style="font-size: 17pt;">企业登录</label>
    </view>
    <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="section common_style" style="margin-top: 50rpx">
            <input name="input" placeholder="电话" />
        </view>
        <view class="flex-wrp" style="flex-direction: row">
            <view class="flex-item-left"><input name="input" placeholder="验证码" /></view>
            <button size="mini" type="primary">获取验证码</button>
        </view>
        <view class="btn-area">
            <button formType="submit" class="login__btn">登录</button>
        </view>
        <view>
            <navigator url="../signup/signup?title=signup" open-type="navigate">
                <label style="font-size: 13pt;text-decoration: underline">还没有账户? 快来注册吧！</label>
            </navigator>
        </view>
    </form>
</view>
